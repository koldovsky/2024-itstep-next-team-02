generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("POSTGRES_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING")
}


model User {
    id Int @id @default(autoincrement())
    token String
    fullName String
    email String @unique
    password String
    role UserRole @default(USER)
    createdAt DateTime @default(now())

    cart Cart?
    order Order[]
}

model Cart {
    id Int @id @default(autoincrement())
    totalAmount Int @default(0)
    token String
    createdAt DateTime @default(now())

    items CartItem[]
    user User? @relation(fields: [userId], references: [id])
    userId Int? @unique
}

model CartItem {
    id Int @id @default(autoincrement())
    quantity Int

    productItem ProductItem @relation(fields: [productItemId], references: [id])
    productItemId Int
    cart Cart @relation(fields: [cartId], references: [id])
    cartId Int
}

model ProductItem {
    id Int @id @default(autoincrement())
    price Int
    color String?
    size String?
    inStock Int
    description String
    discountPercent Int @default(1)

    cartItems CartItem[]
    product Product @relation(fields: [productId], references: [id])
    productId Int
}

model Product {
    id Int @id @default(autoincrement())
    name String
    imageUrl String
    rating Int
    reviews Int
    createdAt DateTime @default(now())
    categoryId Int

    items ProductItem[]
    category Category @relation(fields: [categoryId], references: [id])
}

model Category {
    id Int @id @default(autoincrement())
    name String @unique

    products Product[]
}

model Order {
    id Int @id @default(autoincrement())
    token String
    totalAmount Int
    fullName String
    status OrderStatus
    paymentId String?
    items Json
    address String
    email String
    phone String
    comment String?

    user User? @relation(fields: [userId], references: [id])
    userId Int?  
}

enum OrderStatus {
    PENDING
    SUCCEEDED
    CANCELLED
}

enum UserRole {
    USER
    ADMIN
}